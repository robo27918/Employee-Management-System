@using Employee_Management_System.Models
@model IEnumerable<Employee_Management_System.Models.Employee>
<h2>Employee List</h2>

<p>
    <a href="@Url.Action("Create")">Create New Employee</a>

</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Position</td>
            <td>@employee.Salary</td>
            <td>@employee.Department</td>
            <td>
                <a href="@Url.Action("Edit", new{id=employee.EmployeeId})">Edit</a>
                <a href="@Url.Action("Delete", new{id=employee.EmployeeId})">Delete</a>

            </td>
        </tr>
        }
        
    </tbody>
 
</table>