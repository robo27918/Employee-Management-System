@model Employee
<h2> Edit Employee</h2>
@if (Model == null)
{
    <p style="color: red;">Error: Employee not found. Model is null.</p>

}
else
{
    <form class="container mt-4" asp-action="Edit" method="post">
        <input type="hidden" asp-for="EmployeeId" />


        <div class="form-group mb-3">

            <label class="form-label"> Employee ID:</label>
            <input value="@Model.EmployeeId" type="text" class="form-control" readonly />

        </div>

        <div class="form-group mb-3">
            <label asp-for="FirstName" class="form-label">Enter First Name:</label>
            <input asp-for="FirstName" type="text" class="form-control" />

        </div>

        <div class="form-group mb-3">
            <label asp-for="LastName" class="form-label">Enter Last Name:</label>
            <input asp-for="LastName" type="text" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Position" class="form-label">Enter Position: </label>
            <input asp-for="Position" type="text" class="form-control" />

        </div>

        <div class="form-group mb-3">
            <label asp-for="Salary" class="form-label">Enter Salary:</label>
            <input asp-for="Salary" type="text" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Department" class="form-label">Enter Department</label>
            <input asp-for="Department" type="text" class="form-control" />

        </div>

        <div class="form-group container d-flex justify-content-center">
            <button type="submit" class="btn-lg btn-outline-success rounded-pill">Submit</button>

        </div>


    </form>
}
